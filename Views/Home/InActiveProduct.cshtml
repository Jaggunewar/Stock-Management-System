@model List<StockManagementSystem.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<h3>Inactive Products</h3>
<p>
    <a asp-action="RemoveInactiveProduct" class="btn btn-danger">Remove Inactive Items</a>
</p>
<table class="table table-bordered table-striped">

    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Last Active</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.Category.CategoryName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.LastActive
            </td>
        </tr>

    }
</table>


